@model CalculoPrev.DAL.Models.IndiceCorrecao
@{
    ViewBag.Title = "Índice de Correção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Cadastro de Índice de Correção</h2>
        <ol class="breadcrumb">
            <li>
                <a href="home.html">Home</a>
            </li>
            <li>
                <a>Cadastro</a>
            </li>
            <li class="active">
                <strong>Adicionar Índice de Correção</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Adicionar Índice de Correção</h5>
                        <div class="ibox-tools">

                        </div>
                    </div>
                    <div class="ibox-content">
                        <form id="form-cadastro" role="form" action="home.html">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Nome do índice</label>
                                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>Descrição do Índice</label>
                                        @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>Tipo de índice</label>
                                        @Html.EnumDropDownListFor(m => m.Tipo, "Selecionar...", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <label>Periodicidade</label>
                                        @Html.EnumDropDownListFor(m => m.Periodicidade, "Selecionar...", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group" id="dataInicio">
                                        <label>Ínicio</label>
                                        <div class="input-group date datetimepicker">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            @Html.TextBoxFor(m => m.DataInicio, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group" id="dataFim">
                                        <label>Fim</label>
                                        <div class="input-group date datetimepicker">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            @Html.TextBoxFor(m => m.DataFim, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 form-checkbox" style="text-align:center;">
                                        @Html.CheckBoxFor(m => m.Extinto, new { @id = "checkboxExtinto", @class = "form-control toggle" })
                                        <label for="checkboxExtinto">
                                            Extinto
                                        </label>
                                </div>
                                
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Informações Gerais sobre o índice</label>
                                        @Html.TextAreaFor(m => m.Informacoes, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="hr-line-solid"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <div style="float:right">
                                            <button class="btn btn-white btn-cancelar" type="button">Cancelar</button>
                                            <button class="btn btn-primary btn-salvar" value="Create" type="submit">Salvar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/datapickerStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/sweetalert")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/datapicker")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $('.btn-cancelar').click(function () {
                swal({
                    title: "Tem certeza?",
                    text: "Cuidado, você perderá todas as modificações caso confirme este cancelamento!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Sim, pode cancelar!",
                    cancelButtonText: "Não",
                    closeOnConfirm: true
                }, function () {
                    //swal("Deleted!", "Your imaginary file has been deleted.", "success");
                });
            });

            //$('.btn-salvar').click(function () {
            //    swal({
            //        title: "Sucesso!",
            //        text: "Cadastro realizado com sucesso!",
            //        type: "success"
            //    });
            //});

            $('.datetimepicker').datepicker({
                viewMode: "months",
                minViewMode: "months",
                format: 'mm/yyyy',
                language: 'pt-BR',
                todayHighlight: true,
                autoclose: true
            });
        });
    </script>
}





