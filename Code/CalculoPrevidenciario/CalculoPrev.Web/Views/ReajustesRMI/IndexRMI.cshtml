                $('#fator2Add').val(items.Fator2);
                $('#fator3Add').val(items.Fator3);
                $('#fator4Add').val(items.Fator4);
                $('#fator5Add').val(items.Fator5);
                $('#fator6Add').val(items.Fator6);
                $('#fator7Add').val(items.Fator7);
                $('#fator8Add').val(items.Fator8);
                $('#fator9Add').val(items.Fator9);
                $('#fator10Add').val(items.Fator10);
                $('#fator11Add').val(items.Fator11);
                $('#fator12Add').val(items.Fator12);
                $('#linkPrevidenciaAdd').val(items.linkPrevidencia);
                $('#modalReajuste').modal('show');
                
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
        }

        $(document).ready(function () {

            $('.footable').footable();
            $('.footable2').footable();

        });

        $('.datetimepicker').datepicker({
            viewMode: "months",
            minViewMode: "months",
            format: 'mm/yyyy',
            language: 'pt-BR',
            todayHighlight: true,
            autoclose: true
        });

        $('#salvarRMI').click(function () {
            console.log($('#dataAdd').val());
            $.ajax({
                url: '@Url.Action("SaveReajusteAjax", "ReajustesRMI", new { })',
                type: "Post",
                cache: false,
