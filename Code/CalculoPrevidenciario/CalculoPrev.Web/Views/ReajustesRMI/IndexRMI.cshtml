@section Styles {
    @Styles.Render("~/plugins/footableStyles")
    @Styles.Render("~/plugins/datapickerStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/footable")
    @Scripts.Render("~/plugins/datapicker")
    <script type="text/javascript">

        $('#addRMI').click(function () {
            var m = ['01','02','03','04','05','06','07','08','09','10','11','12']
            var d = new Date();
            $('#dataAdd').val(m[d.getMonth()] + "/" + d.getFullYear());
            changeDataFatores(d.getMonth(), d.getFullYear());
        });

        function changeDataFatores(mes, ano) {
            var m = ['01', '02', '03', '04', '05', '06', '07', '08', '09', '10', '11', '12'];
            document.getElementById('fator1').innerText = 'Em ' + m[(mes - 1) < 0 ? 12 + (mes - 1) : (mes - 1)] + "/" + (((mes - 1) < 0) ? ano-1 : ano); 
            document.getElementById('fator2').innerText = 'Em ' + m[(mes - 2) < 0 ? 12 + (mes - 2) : (mes - 2)] + "/" + ((mes - 2) < 0 ? ano - 1 : ano); 
            document.getElementById('fator3').innerText = 'Em ' + m[(mes - 3) < 0 ? 12 + (mes - 3) : (mes - 3)] + "/" + ((mes - 3) < 0 ? ano - 1 : ano);
            document.getElementById('fator4').innerText = 'Em ' + m[(mes - 4) < 0 ? 12 + (mes - 4) : (mes - 4)] + "/" + ((mes - 4) < 0 ? ano - 1 : ano); 
            document.getElementById('fator5').innerText = 'Em ' + m[(mes - 5) < 0 ? 12 + (mes - 5) : (mes - 5)] + "/" + ((mes - 5) < 0 ? ano - 1 : ano); 
            document.getElementById('fator6').innerText = 'Em ' + m[(mes - 6) < 0 ? 12 + (mes - 6) : (mes - 6)] + "/" + ((mes - 6) < 0 ? ano - 1 : ano); 
            document.getElementById('fator7').innerText = 'Em ' + m[(mes - 7) < 0 ? 12 + (mes - 7) : (mes - 7)] + "/" + ((mes - 7) < 0 ? ano - 1 : ano);
            document.getElementById('fator8').innerText = 'Em ' + m[(mes - 8) < 0 ? 12 + (mes - 8) : (mes - 8)] + "/" + ((mes - 8) < 0 ? ano - 1 : ano); 
            document.getElementById('fator9').innerText = 'Em ' + m[(mes - 9) < 0 ? 12 + (mes - 9) : (mes - 9)] + "/" + ((mes - 9) < 0 ? ano - 1 : ano);
            document.getElementById('fator10').innerText = 'Em ' + m[(mes - 10) < 0 ? 12 + (mes - 10) : (mes - 10)] + "/" + ((mes - 10) < 0 ? ano - 1 : ano);
            document.getElementById('fator11').innerText = 'Em ' + m[(mes - 11) < 0 ? 12 + (mes - 11) : (mes - 11)] + "/" + ((mes - 11) < 0 ? ano - 1 : ano);
            document.getElementById('fator12').innerText = 'Em ' + m[(mes - 12) < 0 ? 12 + (mes - 12) : (mes - 12)] + "/" + ((mes - 12) < 0 ? ano - 1 : ano);
        }

        function editarRMI(reajusteId, data, tetoContribuicao, tetoRmi, menorValorTeto, maiorValorTeto) {
            $('#reajusteId').val(reajusteId);
            $.ajax({
            url: '@Url.Action("GetReajusteAjax", "ReajustesRMI", new { })',
            type: "Post",
            cache: false,
            dataType: "json",
            data: {
                reajusteId: $('#reajusteId').val()
            },
            beforeSend: function () {

            },
            success: function (items) {
                console.log('sucesso GetReajusteAjax');
                $('#reajusteId').val(items.ReajusteRMIID);
                $('#dataAdd').val(items.Data);
                $('#reajusteTotalAdd').val(items.ReajusteTotal);
