                    </div>
                </div>
                <hr />
                <p>Link para a portario do ministério da previdência social</p>
                @Html.TextBox("linkPrevidenciaAdd", null, new { @class = "form-control"})
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button id="salvarRMI" type="button" class="btn btn-primary">Salvar</button>
