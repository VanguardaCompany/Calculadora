@model PagedList.IPagedList<CalculoPrev.DAL.Models.ReajusteRMI>
@using PagedList.Mvc
@using PagedList
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Reajustes da R.M.I.";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Cadastro de Reajuste da R.M.I.</h2>
        <ol class="breadcrumb">
            <li>
                <a href="home.html">Home</a>
            </li>
            <li>
                <a>Cadastro</a>
            </li>
            <li class="active">
                <strong>Tabela de Reajuste da R.M.I.</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tabela de Reajustes R.M.I.</h5>
                    <div class="ibox-tools">
                        <button id="addRMI" class="btn btn-xs btn-success" type="button" data-toggle="modal" data-target="#modalReajuste"><strong><i class="fa fa-plus btn-icon"></i>Adicionar</strong></button>
                        @*Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs" })*@
                    </div>
                </div>
                <div class="ibox-content">
                    <form role="form" class="form-inline"></form>

                    <hr />

                    <div class="table-responsive">
                        <table class="footable table table-stripped toggle-arrow-tiny">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Reajuste (%)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td hidden>@Html.DisplayFor(modelItem => item.ReajusteRMIID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Data)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ReajusteTotal)</td>

                                        <td>
                                            <button class="btn btn-xs btn-default" type="button" onclick="editarRMI('@Html.DisplayFor(modelItem => item.ReajusteRMIID)')">
                                                <strong><i class="fa fa-edit" style="margin-right:6px;"></i>Editar</strong>
                                            </button>
                                            <button class="btn btn-xs btn-default" type="button" onclick="location.href='@Url.Action("DeleteRMI", "ReajustesRMI",new { limiteId = Html.DisplayFor(modelItem => item.ReajusteRMIID) })'">
                                                <strong><i class="fa fa-eraser" style="margin-right:6px;"></i>Apagar</strong>
                                            </button>
                                        </td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal" id="modalReajuste" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:900px">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:15px 20px ">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" style="text-align:left;font-size:16px">Adicionar Reajuste R.M.I.</h3>
            </div>
            @Html.Hidden("reajusteId")
            <div class="modal-body ">
                <div class="row">
                    <div class="col-sm-3 ">
                        <div class="form-group" id="dataModal">
                            <label>Mês/Ano</label>
                            <div class="input-group date datetimepicker">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                @Html.TextBox("dataAdd", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 ">
                        <form role="form">
                            <div class="form-group">
                                <label>Reajuste Total %</label>
                                @Html.TextBox("reajusteTotalAdd", null, new { @class = "form-control decimal", @type = "number", @min = "0", @step = "0.01" })
                            </div>
                        </form>
                    </div>
                </div>
                <hr />
                <p>Informe abaixo os fatores proporcionais de acordo com a D.B.I. </p>
                <div class="row">
