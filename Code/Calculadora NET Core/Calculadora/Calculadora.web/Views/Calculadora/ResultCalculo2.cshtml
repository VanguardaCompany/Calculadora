@model Calculadora.Domain.Models.CalculadoraViewModel

@{
    ViewBag.Title = "Resultado do Cálculo";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Resultado do Cálculo</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li class="active">
                <strong>Resultado do Cálculo</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row" id="sortable-view">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Dados do cliente</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="ibox-filter" style="margin-bottom:20px;">
                        <div class="row">
                            <div class="col-lg-4">
                                <label style="margin-right:5px">Nome: </label>
                                @Html.DisplayFor(m => m.ClienteSelecionado.Nome, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-2">
                                <label style="margin-right:5px">Sexo: </label>
                                @Html.DisplayFor(m => m.ClienteSelecionado.Sexo, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-3">
                                <label style="margin-right:5px">Data Nascimento: </label>
                                @Html.DisplayFor(m => m.ClienteSelecionado.Nascimento, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <label>Contribuições</label>
                        <table class="footable table table-stripped toggle-arrow-tiny">
                            <thead>
                                <tr>
                                    <th hidden>IdSimulacao</th>
                                    <th hidden>IdTempoContribuicao</th>
                                    <th>Data Admissão</th>
                                    <th>Data Demissão</th>
                                    <th>Atividade é insalubre, perigosa ou penosa?</th>
                                    <th>Profissão</th>
                                    <th>Empregador</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    @if (Model.TempoContribuicoes != null)
                                    {
                                        @foreach (var item in Model.TempoContribuicoes)
                                        {
                                            <tr>
                                                <td hidden>@Html.DisplayFor(modelItem => item.TempoContribuicaoID)</td>
                                                <td hidden>@Html.DisplayFor(modelItem => item.SimulacaoID)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DataAdmissao)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DataDemissao)</td>
                                                <td>@Html.DisplayFor(modelItem => item.AtividadeIPP)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Profissao)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Empregador)</td>
                                            </tr>
                                        }
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Aposentadoria por Tempo de Contribuição</h5>
                    @*<div class="ibox-tools">
                        @*<a class="pdf-link" href="DemoModelPDF/Download">
                                <i class="fa fa-file-pdf-o"></i>
                            </a>

                        <a id="btn-exportPDF" target="_blank" href="@Url.Action("DownloadPdf", "Calculadora")" class="pdf-link">
                            <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                        </a>

                        <a class="excel-link">
                            <i class="fa fa-file-excel-o"></i>
                        </a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>

                    </div>*@
                </div>
                <div class="ibox-content">

                    <div class="row progress-div">
                        <span>Tempo de Contribuição</span>
                        <small class="pull-right">@Html.DisplayFor(m => m.SimulacaoSelecionada.PorcentagemTempoContribuicao)%</small>
                        <div class="progress">
                            <div style="width: @Html.DisplayFor(m => m.SimulacaoSelecionada.PorcentagemTempoContribuicao)%" aria-valuemax="100" aria-valuemin="0" role="progressbar" class="progress-bar progress-bar-warning">
                            </div>
                        </div>
                        <div class="progress-texto">
                            @Model.SimulacaoSelecionada.TempoTotalContribuicao
                        </div>
                    </div>

                    <div class="row progress-div">
                        <span>Carência</span>
                        <small class="pull-right">95%</small>
                        <div class="progress">
                            <div style="width: 95%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="100" role="progressbar" class="progress-bar progress-bar-warning" ]>
                            </div>
                        </div>
                        <div class="progress-texto">
                            30 anos / 31 anos
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <strong>Data prevista:</strong> <label class="label label-success">@Html.DisplayFor(m => m.SimulacaoSelecionada.DataCompletaTempoContribuicao)</label>
                        </div>
                        <div class="col-lg-6">
                            <strong>Valor previsto:</strong> <label class="label label-success">R$ 2.054,00</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib_bower/jquery-ui/jquery-ui.js"></script>
        <script src="~/lib/touchpunch/jquery.ui.touch-punch.min.js"></script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function () {

            //WinMove();

        });
    </script>
}


