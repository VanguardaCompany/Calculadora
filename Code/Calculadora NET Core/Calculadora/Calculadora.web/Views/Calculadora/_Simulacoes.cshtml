@model Calculadora.Domain.Models.CalculadoraViewModel

@Html.HiddenFor(m => m.ClienteSelecionado.PessoaID, new { @id = "ClienteSelecionadoID" })
@if (Model.Simulacoes != null && Model.Simulacoes.Count > 0)
{
    @Html.DropDownListFor(m => m.SimulacaoSelecionada, Model.Simulacoes.Select(s => new SelectListItem()
    {
        Text = s.Data.ToString(),
        Value = s.SimulacaoID.ToString()
    }), "Nova Simulação...", htmlAttributes: new { @class = "form-control", @id = "simulacaoSelecionada", onchange = "getTempoContribuicoes()" })
}
else
{
    @Html.Label("Este cliente ainda não tem simulações")
}