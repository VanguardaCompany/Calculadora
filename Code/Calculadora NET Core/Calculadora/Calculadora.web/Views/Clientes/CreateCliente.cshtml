            document.getElementById('NumeroDocumentoIdentificacao').disabled = true;

            $("#DocumentoIdentificacao").on('change', function () {
                console.log($("#DocumentoIdentificacao").val());
                if ($("#DocumentoIdentificacao").val() > 0) {
                    console.log('>0');
